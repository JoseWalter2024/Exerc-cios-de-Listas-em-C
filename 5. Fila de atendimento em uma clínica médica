#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct Paciente {
    char nome[50];
    struct Paciente *prox;
} Paciente;

Paciente* criarPaciente(char nome[]) {
    Paciente *novo = (Paciente*)malloc(sizeof(Paciente));
    strcpy(novo->nome, nome);
    novo->prox = NULL;
    return novo;
}

void adicionarPaciente(Paciente **fila, char nome[]) {
    Paciente *novo = criarPaciente(nome);
    if (*fila == NULL) {
        *fila = novo;
    } else {
        Paciente *atual = *fila;
        while (atual->prox != NULL) {
            atual = atual->prox;
        }
        atual->prox = novo;
    }
    printf("Paciente %s adicionado Ã  fila.\n", nome);
}

void removerPaciente(Paciente **fila) {
    if (*fila == NULL) {
        printf("Nenhum paciente na fila.\n");
        return;
    }

    Paciente *atendido = *fila;
    *fila = atendido->prox;
    printf("Paciente %s foi atendido e removido da fila.\n", atendido->nome);
    free(atendido);
}

void exibirFila(Paciente *fila) {
    if (fila == NULL) {
        printf("Nenhum paciente aguardando atendimento.\n");
        return;
    }

    Paciente *atual = fila;
    printf("Pacientes aguardando atendimento:\n");
    while (atual != NULL) {
        printf("%s\n", atual->nome);
        atual = atual->prox;
    }
}

int main() {
    Paciente *fila = NULL;
    int opcao;
    char nome[50];

    do {
        printf("\nGerenciamento da Fila de Pacientes\n");
        printf("1. Adicionar paciente\n");
        printf("2. Remover paciente (atendido)\n");
        printf("3. Exibir fila de pacientes\n");
        printf("0. Sair\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);
        getchar();

        switch (opcao) {
            case 1:
                printf("Digite o nome do paciente: ");
                fgets(nome, 50, stdin);
                nome[strcspn(nome, "\n")] = '\0';
                adicionarPaciente(&fila, nome);
                break;
            case 2:
                removerPaciente(&fila);
                break;
            case 3:
                exibirFila(fila);
                break;
            case 0:
                printf("Saindo...\n");
                break;
            default:
                printf("Opcao invalida!\n");
        }
    } while (opcao != 0);

    return 0;
}
